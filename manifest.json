{
  "name": "OpenFin",
  "description": "Take back your financial data.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "docs/openfin.png",
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "packages/chrome/dist/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "packages/side-panel/dist/index.html"
  },
  "content_scripts": [
    {
      "js": ["packages/chrome/dist/bridge.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "sidePanel", "tabs", "debugger"]
}
